<%= form_for @set do |f| %>

  <div class="field">
    <%= f.label :exercise %>
    <%= f.collection_select( :exercise, Exercise.all, :id, :name) %><br />
  </div>

  <div class="field">
    <%= f.label :reps %>
    <%= f.select :reps, (0..50) %><br  />
  </div>

  <div class="field">
    <%= f.label :weight %>
    <%= f.select :weight, (0..50) %><br />
  </div>

  <div class="field">
    <%= f.label :duration %>
    <%= f.time_field :duration %><br />
  </div>
  <%= f.submit "Submit" %>

<% end %>
